@model E_Appraisal.Models.Instruction
@{
    if(Session["Current"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    if (!string.IsNullOrEmpty(Session["Manager"] as string) || !string.IsNullOrEmpty(Session["hehehe"] as string))
    {
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutInstruction.cshtml";
    }

}
<style>
    p{
        text-align:left;
    }

    th{
        text-align:center;
    }
</style>

@if ((!string.IsNullOrEmpty(Session["Bahasa"] as string) && Session["Bahasa"].ToString() == "1") || (string.IsNullOrEmpty(Session["Bahasa"] as string)))
{
    <h2>Performance Review</h2>
    <br />
