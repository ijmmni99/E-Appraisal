                    <div style="margin:10px">
                        <p>
                            <textarea rows="4" name="g1">@Model.Item1.G_1</textarea>
                        </p>
                        <p>
                            <textarea rows="4" name="g2">@Model.Item1.G_2</textarea>
                        </p>
                        <p>
                            <textarea rows="4" name="g3">@Model.Item1.G_3</textarea>
                        </p>
                        <p>
                            <textarea rows="4" name="g4">@Model.Item1.G_4</textarea>
                        </p>
                        <p>
                            <textarea rows="4" name="g5">@Model.Item1.G_5</textarea>
                        </p>
                        <p>
                            <textarea rows="4" name="g6">@Model.Item1.G_6</textarea>
                        </p>
                        <p>
                            <textarea rows="4" name="g7">@Model.Item1.G_7</textarea>
                        </p>
                    </div>
                </div>
                <div style="margin:10px">
                    <button type="reset" onclick="window.location.href = 'HR_Page'" class="btn btn-danger">Cancel</button>  <button type="submit" class="btn btn-success">Enter</button> 
                </div>
            </div>
        </div>
        <br />
    }
}
