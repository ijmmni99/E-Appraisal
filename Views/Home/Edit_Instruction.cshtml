@if (Model.Item1 != null)
{
    using (Html.BeginForm("Edit_Instruction", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <h4 class="text-center"><b><textarea name="mt" rows="1">@Model.Item1.Main_Title</textarea></b></h4>
            <br />
            <div class="col-md-6">
                <div style="border-style:ridge; border-color:yellow">
                    <h5 class="text-center" style="background-color:yellow"><b><textarea name="ytitle" rows="1">@Model.Item1.Yellow_Title</textarea></b></h5>
                    <div style="margin:10px">
                        <p>
                            <textarea rows="4" name="y1">@Model.Item1.Y_1</textarea>
                        </p>
                        <p>
                            <textarea rows="4" name="y2">@Model.Item1.Y_2</textarea>
                        </p>
                        <p>
                            <textarea rows="4" name="y3">@Model.Item1.Y_3</textarea>
                        </p>
                    </div>
                </div>
                <br />
                <div style="border-style:ridge; border-color:deepskyblue">
                    <h5 class="text-center" style="background-color:deepskyblue"><b><textarea name="btitle" rows="1">@Model.Item1.Blue_Title</textarea></b></h5>
                    <div style="margin:10px">
                        <p>
                            <textarea rows="4" name="b1">@Model.Item1.B_1</textarea>
                        </p>
                    </div>
                </div>
                <br />
                <div style="text-align:center">
                    <div style="margin:10px">
                        <table border="1" cellpadding="2" width="100%">
                            <tr>
                                <th style="background-color:lightgray">Score</th>
                                <th style="background-color:lightgray">Criterion</th>
