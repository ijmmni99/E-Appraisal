                <td><textarea name="erm" rows="3" class="output form-control" id="2" type="text"></textarea></td>
                <td><textarea name="erm" rows="3" class="output form-control" id="3" type="text"></textarea></td>
                <td><input class="btn-danger" type="button" value="Remove" onclick="Remove3(this)" /></td>
            </tr>
            @foreach (var data in Model.EA_Sec3)
            {
                <tr>
                    <td><textarea rows="3" style="width:100%" name="erm" class="form-control output" id="1" type="text">@data.Objective_sec3</textarea></td>
                    <td><textarea rows="3" style="width:100%" name="erm" class="form-control output" id="2" type="text">@data.Standards</textarea></td>
                    <td><textarea rows="3" style="width:100%" name="erm" class="form-control output" id="3" type="text">@data.Measure</textarea></td>
                    <td><input class="btn-danger" type="button" value="Remove" onclick="Remove3(this)" /></td>
                </tr>
            }
        </tbody>
        <tfoot></tfoot>
    </table>
    <br />
    <input style="margin-left:92.5%;width:70px" class="btn btn-primary" type="button" id="btnSave3" value="Save" />
</div>
}
