<script>
    var z = 4;
    var b = 4;

    function Add_Section_3() { 
        var table = document.getElementById("out_tab");
        var rowCount = table.rows.length;
        var row = table.insertRow(rowCount);
        var colCount = table.rows[0].cells.length;
        for(var i=0; i<colCount; i++) {
            var newcell = row.insertCell(i);
            newcell.innerHTML = table.rows[2].cells[i].innerHTML;
            switch (newcell.childNodes[0].name) {
                    case "erm":
                        newcell.childNodes[0].id = b;
                        newcell.childNodes[0].className = "output form-control";
                        newcell.childNodes[0].style = "width:100%"
                        b++;
            }
            
        }
        
        for (z; z < 70;) {
            document.getElementById(z).value = document.getElementById("ob_input").value;
            z++;
            document.getElementById(z).value = document.getElementById("sd_input").value;
            z++;
            document.getElementById(z).value = document.getElementById("pm_input").value;
            z++;
            break;
        }
        document.getElementById("ob_input").value = "";
        document.getElementById("sd_input").value = "";
        document.getElementById("pm_input").value = "";
        document.getElementById("ob_input").focus();           
     }
        
        
</script>
