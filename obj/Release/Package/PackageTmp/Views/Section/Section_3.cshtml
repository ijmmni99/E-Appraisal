            <td><br /> <button class="btn-success" onclick="Add_Section_3()" id="btn_add">Add</button></td>
        </tr>
    </table>
    <br />
    <table class="tdd" id="out_tab" border="1" cellpadding="5" width="100%">
        <thead>
            <tr>
                <th width="30%"><b>Objectives/Goals</b></th>
                <th width="30%"><b>Performance Standard</b></th>
                <th width="30%"><b>Performance Measure</b></th>
